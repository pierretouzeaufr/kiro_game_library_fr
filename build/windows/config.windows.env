# Board Game Library Configuration for Windows
# The database will be stored in the data directory next to the executable

# Server Configuration
SERVER_PORT=8080
SERVER_HOST=0.0.0.0
SERVER_READ_TIMEOUT=30s
SERVER_WRITE_TIMEOUT=30s
SERVER_SHUTDOWN_TIMEOUT=30s

# Database Configuration - stored in user's AppData directory (no admin rights needed)
DATABASE_PATH=%APPDATA%\BoardGameLibrary\library.db
DATABASE_MAX_OPEN_CONNS=1
DATABASE_MAX_IDLE_CONNS=1
DATABASE_CONN_MAX_LIFETIME=1h

# Alert System Configuration
ALERTS_CHECK_INTERVAL=24h
ALERTS_REMINDER_DAYS=2
ALERTS_ENABLE_REMINDERS=true
ALERTS_ENABLE_OVERDUE=true

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=text
LOG_OUTPUT=stdout